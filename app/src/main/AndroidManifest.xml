<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TicketsManager"
        tools:targetApi="31">
        <activity
            android:name=".controller.Admin.GestionPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".controller.CambiarPassword"
            android:exported="false" />
        <activity
            android:name=".controller.Admin.ActualizarTicketActivity"
            android:exported="false" />
        <activity
            android:name=".controller.Admin.AgregarTicketActivity"
            android:exported="false" />
        <activity
            android:name=".controller.Admin.GestionTicketsActivity"
            android:exported="false" />
        <activity
            android:name=".controller.Admin.GestionUsuariosActivity"
            android:exported="false" />
        <activity
            android:name=".controller.Admin.AdminDashboardActivity"
            android:exported="false" />
        <activity
            android:name=".controller.RegistroActivity"
            android:exported="false" />
        <activity
            android:name=".controller.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controller.LoginActivity"
            android:exported="true" />
    </application>

</manifest>